{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "vite.config.ts",
    "src/node/**/*.ts",
    "src/common/**/*.js",
    "api/**/*.js"
  ]
}